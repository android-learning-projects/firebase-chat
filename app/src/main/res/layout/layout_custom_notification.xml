<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imageViewAppLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/imageViewAppLogo">

        <TextView
            android:id="@+id/textViewNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TextAppearance.Compat.Notification.Title"/>

        <TextView
            android:id="@+id/textViewSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test tex"
            android:layout_below="@+id/textViewNotificationTitle"
            style="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintTop_toBottomOf="@+id/textViewNotificationTitle" />

    </RelativeLayout>

</RelativeLayout>